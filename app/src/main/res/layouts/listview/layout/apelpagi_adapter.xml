<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="4dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvEmpApelPagiLV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EMPLOYEE NAME"
            android:textColor="@color/black"
            android:textAllCaps="true"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvJabatanApelPagiLv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="OPR. ALAT BERAT"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvJudulKehadiranApelLv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Kehadiran  :"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvJenisKehadiranApelPagiLv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="N/A"/>

            <TextView
                android:id="@+id/tvWaktuKehadiranApelPagiLv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textColor="@color/black"
                android:text=""/>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imgViewAdapterApel"
        android:layout_width="55dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/user" />

</LinearLayout>