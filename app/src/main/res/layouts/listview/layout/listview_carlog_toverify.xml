<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/tvNodocLvCarlogToVerify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Document Number"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/black" />

    <LinearLayout
        android:id="@+id/layoulvCarlogToVerify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">

        <TextView
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="Asal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginStart="2dp"
            android:textColor="@color/black"
            android:text=":"/>

        <TextView
            android:id="@+id/tvAsalDivisiLvCarlogToVerify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginStart="4dp"
            android:textColor="@color/black"
            android:text="AsalDivisi"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginStart="4dp"
            android:textColor="@color/black"
            android:text="—"/>

        <TextView
            android:id="@+id/tvAsalLokasiLvCarlogToVerify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginStart="4dp"
            android:textColor="@color/black"
            android:text="AsalLokasi"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">

        <TextView
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="Tujuan"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginStart="2dp"
            android:textColor="@color/black"
            android:text=":"/>

        <TextView
            android:id="@+id/tvTujuanDivisiLvCarlogToVerify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginStart="4dp"
            android:textColor="@color/black"
            android:text="AsalDivisi"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginStart="4dp"
            android:textColor="@color/black"
            android:text="—"/>

        <TextView
            android:id="@+id/tvTujuanLokasiLvCarlogToVerify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginStart="4dp"
            android:textColor="@color/black"
            android:text="AsalLokasi"/>

    </LinearLayout>



</androidx.appcompat.widget.LinearLayoutCompat>