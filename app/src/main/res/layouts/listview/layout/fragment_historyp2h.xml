<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvUnitLvHistoryP2H"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="8dp"
        android:drawableStart="@drawable/ic_baseline_car_20"
        android:drawablePadding="8dp"
        android:text="Vehicle name"
        android:textStyle="bold"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tvKegiatanLvHistoryP2H"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginHorizontal="8dp"
        android:drawableStart="@drawable/ic_twotone_briefcase_16"
        android:drawablePadding="10dp"
        android:paddingStart="2dp"
        android:text="Activity Name"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tvNoteLvHistoryP2H"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginHorizontal="8dp"
        android:visibility="gone"
        android:drawableStart="@drawable/ic_baseline_note_16"
        android:drawablePadding="8dp"
        android:paddingStart="2dp"
        android:text="Catatan Tambahan"
        android:textColor="@color/black" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="?android:attr/listDivider" />

</LinearLayout>