<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutItemLvRincianRKH"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/tvKegiatanKerjaRincianRKH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kegiatan Kerja"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">

        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text="Lokasi Kerja"
            android:textColor="@color/black"
            android:layout_marginEnd="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:text=":"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvLokasiKerjaRincianRKH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="Target Prestasi"
            android:textColor="@color/black"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">

        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:text="Target Kerja"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:text=":"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvPrestasiKerjaRincianRKH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="Target"
            android:textColor="@color/black"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>