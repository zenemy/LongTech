<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutLvInfo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:padding="8dp">

    <TextView
        android:id="@+id/tvWorkTypeInfoHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Info Menu"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <TextView
        android:id="@+id/tvNoteTambahanLvInfo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@+id/tvWorkTypeInfoHome"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvWorkStatusInfoHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Status tr"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvWorkTypeInfoHome" />

    <TextView
        android:id="@+id/tvTransactionInfoTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Status tr"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/imgUploadInfoHome"
        app:layout_constraintTop_toTopOf="@+id/imgUploadInfoHome" />


    <ImageView
        android:id="@+id/imgUploadInfoHome"
        android:layout_width="19dp"
        android:layout_height="0dp"
        android:src="@drawable/bluetick"
        app:layout_constraintBottom_toBottomOf="@+id/tvWorkStatusInfoHome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvWorkStatusInfoHome" />

    <TextView
        android:id="@+id/tvNoteTambahanLvInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>