<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/tvWorkTypeInfoHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Info Menu"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvWorkStatusInfoHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/black"
        android:text="Status tr"
        app:layout_constraintTop_toBottomOf="@id/tvWorkTypeInfoHome"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/imgUploadInfoHome"
        android:layout_width="19dp"
        android:layout_height="0dp"
        android:src="@drawable/bluetick"
        app:layout_constraintBottom_toBottomOf="@+id/tvWorkStatusInfoHome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvWorkStatusInfoHome" />
</androidx.constraintlayout.widget.ConstraintLayout>