<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFECEC"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    tools:context=".menuhcm.MesinAbsensi">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clHeaderInputMesinAbsensi"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/tbl_lr_bottom"
        android:backgroundTint="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="MESIN ABSENSI"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTglMesinAbsensi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tbl_lr_top"
        android:backgroundTint="@color/white"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="-40dp"
        android:layout_marginEnd="8dp"
        android:text="Minggu, 20-06-2021"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextClock
        android:id="@+id/tvJamMesinAbsensi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/tbl_lr_bottom"
        android:backgroundTint="@color/white"
        android:format24Hour="HH:mm:ss"
        android:gravity="center"
        android:paddingStart="8dp"
        android:paddingTop="4dp"
        android:paddingEnd="8dp"
        android:paddingBottom="4dp"
        android:textColor="@color/colorPrimary"
        android:textSize="50sp"
        android:textStyle="bold"
        android:timeZone="GMT+7" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/tombol"
                android:backgroundTint="@color/white"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/tvTipeMesinAbsensi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="MESIN ABSENSI KARYAWAN"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/layoutIdAbsensiEmp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID ABSENSI"
                        android:textColor="@color/colorPrimary"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvIdAbsensiEmp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutMesinAbsensiInfoEmp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/topborderonly"
                    android:orientation="horizontal"
                    android:paddingTop="8dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginStart="16dp"
                        app:srcCompat="@drawable/username" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvEmpMesinAbsensi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="AWAL MAULANA MARYADI"
                            android:textColor="@color/colorPrimary"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvJabatanMesinAbsensi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_weight="1"
                            android:text="IT OFFICER"
                            android:textColor="@color/colorPrimary"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearPilihAbsen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible"
                android:weightSum="2">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAbsensiMesinMasuk"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="ABSEN\nMASUK"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:cornerRadius="10dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAbsensiMesinPulang"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginStart="4dp"
                    android:layout_weight="1"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="ABSEN\nPULANG"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:cornerRadius="10dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutPilihMetodeMesinAbsen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">

                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginEnd="4dp"
                        android:layout_weight="1"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:text="SCAN QR"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:cornerRadius="10dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnMetodeMesinID"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginStart="4dp"
                        android:layout_weight="1"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:text="ID ABSENSI"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:cornerRadius="10dp" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBackMetodeMesinAbsen"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="8dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="KEMBALI"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:cornerRadius="10dp"
                    app:icon="@drawable/ic_baseline_arrow_left_50"
                    app:iconPadding="-32dp"
                    app:iconSize="40dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/numpadLayoutMesinAbsensi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_dialog"
                    android:backgroundTint="@color/colorPrimary"
                    android:orientation="vertical"
                    android:weightSum="4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/clSampleInput">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/numpad1MesinAbsensi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/white"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:text="1"
                            android:textColor="@color/colorPrimary"
                            android:textSize="40sp"
                            android:textStyle="bold"
                            app:cornerRadius="10dp"
                            app:rippleColor="#007042" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/numpad2MesinAbsensi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/white"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:text="2"
                            android:textColor="@color/colorPrimary"
                            android:textSize="40sp"
                            android:textStyle="bold"
                            app:cornerRadius="10dp"
                            app:rippleColor="#007042" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/numpad3MesinAbsensi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/white"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:text="3"
                            android:textColor="@color/colorPrimary"
                            android:textSize="40sp"
                            android:textStyle="bold"
                            app:cornerRadius="10dp"
                            app:rippleColor="#007042" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/numpad4MesinAbsensi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/white"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:text="4"
                            android:textColor="@color/colorPrimary"
                            android:textSize="40sp"

                            android:textStyle="bold"
                            app:cornerRadius="10dp"
                            app:rippleColor="#007042" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/numpad5MesinAbsensi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/white"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:text="5"
                            android:textColor="@color/colorPrimary"
                            android:textSize="40sp"
                            android:textStyle="bold"
                            app:cornerRadius="10dp"
                            app:rippleColor="#007042" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/numpad6MesinAbsensi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/white"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:text="6"
                            android:textColor="@color/colorPrimary"
                            android:textSize="40sp"
                            android:textStyle="bold"
                            app:cornerRadius="10dp"
                            app:rippleColor="#007042" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/numpad7MesinAbsensi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/white"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:text="7"
                            android:textColor="@color/colorPrimary"
                            android:textSize="40sp"
                            android:textStyle="bold"
                            app:cornerRadius="10dp"
                            app:rippleColor="#007042" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/numpad8MesinAbsensi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/white"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:text="8"
                            android:textColor="@color/colorPrimary"
                            android:textSize="40sp"
                            android:textStyle="bold"
                            app:cornerRadius="10dp"
                            app:rippleColor="#007042" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/numpad9MesinAbsensi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/white"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:text="9"
                            android:textColor="@color/colorPrimary"
                            android:textSize="40sp"
                            android:textStyle="bold"
                            app:cornerRadius="10dp"
                            app:rippleColor="#007042" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/numpadDelMesinAbsensi"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="8dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/white"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:text="DEL"
                            android:textColor="@color/colorPrimary"
                            android:textSize="36sp"
                            android:textStyle="bold"
                            app:cornerRadius="10dp"
                            app:rippleColor="#007042" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/numpad0MesinAbsensi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/white"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:text="0"
                            android:textColor="@color/colorPrimary"
                            android:textSize="40sp"
                            android:textStyle="bold"
                            app:cornerRadius="10dp"
                            app:rippleColor="#007042" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/numpadSimpanMesinAbsensi"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="8dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/white"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:text="OK"
                            android:textColor="@color/colorPrimary"
                            android:textSize="36sp"
                            android:textStyle="bold"
                            app:cornerRadius="10dp"
                            app:rippleColor="#007042" />
                    </LinearLayout>

                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBackNumpadLayoutMesinAbsen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="KEMBALI"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:cornerRadius="10dp"
                    app:icon="@drawable/ic_baseline_arrow_left_50"
                    app:iconPadding="-32dp"
                    app:iconSize="40dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>