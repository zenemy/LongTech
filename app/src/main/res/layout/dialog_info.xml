<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cldialoginfo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:bottomLeftRadius="50dp"
    android:bottomRightRadius="50dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:topLeftRadius="50dp"
    android:topRightRadius="50dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clDlgInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tbl_lr_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvSystemNameDlgInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="LONG TECH"
            android:textColor="#2E5C30"
            android:textSize="16sp"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="@+id/imgLogoDlgInfo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imgLogoDlgInfo"
            app:layout_constraintTop_toTopOf="@+id/imgLogoDlgInfo" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgLogoDlgInfo"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/julong1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout10"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/topborderonly"
        app:layout_constraintEnd_toEndOf="@+id/clDlgInfo"
        app:layout_constraintStart_toStartOf="@+id/clDlgInfo"
        app:layout_constraintTop_toBottomOf="@+id/clDlgInfo">

        <TextView
            android:id="@+id/tvDlgInfoTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="Title"
            android:textColor="#0C0C0C"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDialogInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/tbl_lr_bottom"
        android:backgroundTint="@color/colorPrimary"
        android:foreground="@drawable/tbl_lr_bottom"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="OK"
        android:textColor="@color/colorTextButton"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout10" />


</androidx.constraintlayout.widget.ConstraintLayout>